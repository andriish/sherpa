#!/bin/bash

MAILADDRESS="sherpa@theory.phy.tu-dresden.de"
LOGFILE="sherpa_benchmarking"
STATUS="Benchmarking report: "
DATE=`date +'%y-%m-%d'`
CVSROOT=":ext:141.30.17.250:/usr/local/cvsroot"
CVS_RSH="ssh"
COMPILECOMMAND="TOOLS/makeinstall -t --clean"
INPUTFILE="Benchmark.dat"
SHERPAPATH="SHERPA-1.0/Run/"
MEHANDLEREXIT=201

SetStatus() {
  STATUS=$STATUS$1
}

SendMail() {
  if [ "$IO_ERROR" = "TRUE" ] ; then SetStatus "IO error " ; fi
  if [ "$CVS_ERROR" = "TRUE" ] ; then SetStatus "CVS error " ; fi
  if [ "$COMPILE_ERROR" = "TRUE" ] ; then SetStatus "Compile error " ; fi
  if [ "$SETUP_ERROR" = "TRUE" ] ; then SetStatus "Setup error " ; fi
  if [ "$BENCHMARK_ERROR" = "TRUE" ] ; then SetStatus "Benchmark error " ; fi
  nail -s "$STATUS" $MAILADDRESS < $LOGFILE
  exit $1
}

CleanUp() {
  for I in $1 ; do
    if [ -d $I ] ; then
      rm -rf $I/* > /dev/null 2>&1
    else
      rm -f $I > /dev/null 2>&1
    fi
  done
}

GetList() {
  while read ITEM ; do
    LIST=$LIST" "$ITEM
  done
}

GetFiles() {
  while read I ; do
    BENCHMARK=$BENCHMARK" "$I
  done
}

export CVSROOT
export CVS_RSH

for I in $* ; do
  if [ "$I" = "-f" ]; then DFILE=TRUE
  elif [ "$I" = "-f" ]; then DLOGFILE=TRUE
  elif [ "$I" = "-h" ]; then echo && \
    echo "benchmark version 1.0" && echo && \
    echo "options: -f <file>      specifiy benchmark points in file <file>" && \
    echo "         -l <logfile>   write benchmarking output to <logfile>" && \
    echo "         -h             display this help and exit" && echo && \
    exit 0
  elif [ "$DFILE" = "TRUE" ]; then DFILE="" && FILE=$FILE" "$I
  elif [ "$DLOGFILE" = "TRUE" ]; then DLOGFILE="" && LOGFILE=$I
  else echo "benchmark: error: unrecognized option '$I'. try '-h'" && \
    exit 1 
  fi
done

LOGFILE=$LOGFILE"_"$DATE".bmk"
echo "" > $LOGFILE

echo -e "benchmark: benchmarking started at '$HOSTNAME' ($HOSTTYPE) on `date`" >> $LOGFILE
LIST=""
if [ -f $FILE ] ; then
  GetList < $FILE
else
  echo "benchmark: reading from input file '$FILE' failed on `date`\n" >> $LOGFILE
  IO_ERROR=TRUE
  SendMail 1
fi

echo -e "updating current sherpa version from cvs {\n" >> $LOGFILE
if ! cvs update >> $LOGFILE 2>&1 ; then
  echo -e "\n} update failed\n\nbenchmark: cvs update failed" >> $LOGFILE
  CVS_ERROR=TRUE
  SendMail 2
else 
  echo -e "\n} finished update\n" >> $LOGFILE
fi

echo -e "compiling current sherpa version via '$COMPILECOMMAND' {\n" >> $LOGFILE
if ! $COMPILECOMMAND >> $LOGFILE 2>&1 ; then
  echo -e "\n} compilation failed\n\nbenchmark: compilation failed" >> $LOGFILE
  COMPILE_ERROR=TRUE
  SendMail 3
else 
  echo -e "\n} finished compilation\n" >> $LOGFILE
fi

for I in $LIST ; do
  if [ ! -d $I ] ; then
    echo "benchmark: setup directory '$I' is missing" >> $LOGFILE
    SETUP_ERROR=TRUE
  else
    echo -e "benchmark: benchmarking in '$I' {\n" >> $LOGFILE
    cd $I
    BENCHMARK=""
    if [ -f $INPUTFILE ] ; then
      GetFiles < $INPUTFILE
    else
      echo -e "benchmark: no benchmarking points specified in '$PWD'" >> $LOGFILE
      SETUP_ERROR=TRUE
    fi
    CleanUp "Results Analysis"
    RUNPATH=$PWD
    cd ../$SHERPAPATH
    makeclean >> $RUNPATH"/../"$LOGFILE 2>&1
    Sherpa PATH=$RUNPATH ANALYSIS_OUTPUT=$RUNPATH \
	   RESULT_DIRECTORY=$RUNPATH"/Results/" >> $RUNPATH"/../"$LOGFILE 2>&1
    while (( $? == $MEHANDLEREXIT )) ; do
      makelibs >> $RUNPATH"/../"$LOGFILE 2>&1
      Sherpa PATH=$RUNPATH ANALYSIS_OUTPUT=$RUNPATH \
             RESULT_DIRECTORY=$RUNPATH"/Results/" >> $RUNPATH"/../"$LOGFILE 2>&1
    done 
    cd $RUNPATH
    COUNTER=0
    for I in $BENCHMARK ; do
      (( ++COUNTER ))
      if (( $COUNTER%2 == 0 )) ; then 
        NEW=$I 
	diff -cb $NEW $OLD >> "../"$LOGFILE 2>&1
	if (( $? != 0 )) ; then
	  BENCHMARK_ERROR=TRUE
	fi
      elif (( $COUNTER%2 == 1 )) ; then 
        OLD=$I
      else 
        echo -n
      fi
    done
    cd ..
    echo -e "\n} benchmarking finished \n" >> $LOGFILE
  fi
done

if [ ! "BENCHMARK_ERROR" = "TRUE" ] ; then
  SetStatus "Benchmarking succeeded "
fi
SendMail 0
