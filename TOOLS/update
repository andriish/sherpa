#!/bin/bash

cvs $1 update | tee updated.log 1>/dev/null 2>&1
cat updated.log | grep "M " | grep "\.C" > tee updated_C.log 
cat updated.log | grep "C " | grep "\.C" >> tee updated_C.log 
cat updated.log | grep "M " | grep "\.H" > tee updated_H.log 
cat updated.log | grep "C " | grep "\.H" >> tee updated_H.log 
cat updated.log | grep "M " | grep "\.am" > tee updated_am.log 
cat updated.log | grep "C " | grep "\.am" >> tee updated_am.log 
echo -e "\n\e[1m=\e[0m\e[34m C-Files\e[0m\e[1m ========================================\e[0m"
cat updated_C.log
echo -e "\e[1m=\e[0m\e[32m H-Files\e[0m\e[1m ========================================\e[0m"
cat updated_H.log
echo -e "\e[1m=\e[0m\e[31m Makefiles\e[0m\e[1m ======================================\e[0m"
cat updated_am.log
echo -e "\e[1m==================================================\e[0m\n"
