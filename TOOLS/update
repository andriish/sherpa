#!/bin/bash

cvs -n update | grep "M " | grep "\.C" | tee updated_C.log 1>/dev/null 2>&1
cvs -n update | grep "M " | grep "\.H" | tee updated_H.log 1>/dev/null 2>&1
cvs -n update | grep "M " | grep "\.am" | tee updated_am.log 1>/dev/null 2>&1
echo -e "\n\e[1m=\e[0m\e[34m C-Files\e[0m\e[1m ========================================\e[0m"
cat updated_C.log
echo -e "\e[1m=\e[0m\e[32m H-Files\e[0m\e[1m ========================================\e[0m"
cat updated_H.log
echo -e "\e[1m=\e[0m\e[31m Makefiles\e[0m\e[1m ======================================\e[0m"
cat updated_am.log
echo -e "\e[1m==================================================\e[0m\n"
