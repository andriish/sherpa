DIRS="ATOOLS-2.0 PDF-1.0 BEAM-1.0 PHASIC++-1.0 MODEL-1.0 EXTRA_XS-1.0 APACIC++-2.0 ADICIC++-0.0 AMEGIC++-2.0 AMISIC++-1.0 SHERPA-1.0"

ALL=
for I in $DIRS;
do
  echo "==================================================================="
  echo "  Processing..... configure in $I without make install"
  echo "==================================================================="
  cd $I
  libtoolize --force
  aclocal
  automake -a
  autoconf
  ./configure
  cd ..
done;
#rm -f $ALL
