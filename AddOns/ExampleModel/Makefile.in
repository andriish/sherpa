SHERPA_INSTALL=@prefix@

SOURCES=SM_Zprime.C Interaction_Model_SM_Zprime.C

CC=g++
CXXFLAGS=-g -O2 -pedantic -Wall -fPIC -DPIC

CXXFLAGS+= -I$(shell $(SHERPA_INSTALL)/bin/Sherpa-config --incdir)
LDFLAGS=$(shell $(SHERPA_INSTALL)/bin/Sherpa-config --ldflags)

OBJECTS=$(SOURCES:.C=.o)

all: $(SOURCES) $(OBJECTS) 
	$(CC) -shared -o libSMZprime.so $(OBJECTS) $(LIB)

.C.o:
	$(CC) $(CXXFLAGS) -c $< -o $@

clean:
	rm -rf $(OBJECTS) libSMZprime.so
